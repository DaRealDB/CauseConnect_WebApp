rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Chat file uploads
    match /chat/{conversationId}/{userId}/{allPaths=**} {
      // Allow authenticated users to upload files
      // In production, add authentication checks
      allow write: if true; // For development - allow all writes
      allow read: if true; // For development - allow all reads
      
      // Production rules (uncomment and adjust):
      // allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      // allow read: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


